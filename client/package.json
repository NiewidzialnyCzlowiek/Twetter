{
  "name": "twetter",
  "version": "1.0.0",
  "description": "Client for the pubsub app",
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -c tslint.json -p tsconfig.json",
    "start": "npm run build && electron ./dist/main.js",
    "dist": "build",
    "dist-linux32": "electron-builder --linux --ia32",
    "dist-linux": "electron-builder --linux",
    "dist-all": "electron-builder -mwl"
  },
  "main": "dist/main.js",
  "build": {
    "appId": "twetter",
    "files": [
      "dist/*.js",
      "resources/**",
      "styles/**",
      "*.html"
    ],
    "mac": {
      "category": "social.media"
    },
    "dmg": {
      "icon": "resources/logo-small.svg"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "maintainer": "bartlomiej.szal@gmail.com"
    },
    "win": {
      "target": "NSIS",
      "icon": "resources/logo-small.svg"
    }
  },
  "repository": "https://github.com/NiewidzialnyCzlowiek/pubsub-webapp",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo",
    "typescript"
  ],
  "author": "Bartłomiej Szal & Piotr Hełminiak",
  "license": "MIT",
  "dependencies": {
    "jquery": "^3.3.1",
    "net": "^1.0.2"
  },
  "devDependencies": {
    "@types/jquery": "^3.3.27",
    "electron": "^2.0.8",
    "electron-builder": "^20.38.4",
    "tslint": "^5.10.0",
    "typescript": "^2.8.3"
  }
}
